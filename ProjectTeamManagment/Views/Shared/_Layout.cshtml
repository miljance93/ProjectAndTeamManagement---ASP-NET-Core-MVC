@using Domain.IdentityAuth
@using Microsoft.AspNetCore.Identity
@using ProjectTeamManagment.Models.UserModel
<!DOCTYPE html>

@model UserModel

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectTeamManagment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectTeamManagment.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-green border-bottom box-shadow mb-3" b>
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProjectTeamManagment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav">
                              <li class="nav-item dropdown">
                                  <a class="nav-link active dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Projects
                                  </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="ProjectManagement" asp-controller="DepartmentLead">Project Management</a></li>
                                        <li><a class="dropdown-item" asp-action="ProjectAssignment" asp-controller="DepartmentLead">Project Assignment</a></li>
                                    </ul>
                               </li>
                                <li class="nav-item">
                                  <a class="nav-link active" asp-action="Index" asp-controller="Employee">Team Managment</a>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Current Assignments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="#">Assignment Requests</a>
                            </li> 
                      </ul>   
                        <ul class="nav navbar-nav navbar-right">
                            <li><a asp-action="Register" asp-controller="Account" class="nav-link active" aria-current="page">Register</a></li>
                            <li><a asp-action="Login" asp-controller="Account" class="nav-link active" aria-current="page">Login</a></li>
                        </ul>      
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ProjectTeamManagment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
