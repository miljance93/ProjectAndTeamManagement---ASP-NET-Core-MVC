@using ProjectAndTeamManagement.Models.DepartmentLead
@model CreateNewTeam


<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Create New Team</h1>

            <form asp-action="CreateNewTeam" asp-controller="DepartmentLead" method="post" role="form">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Team Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Team name" />
                </div>
                <div class="mb-3">
                    <label class="mb-3">Select Team Lead</label>
                    <div class="mb-3">
                        <select class="form-select" asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees, "Id", "FullName"))"></select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>