@using Domain.IdentityAuth
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> _signInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectAndTeamManagement</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectAndTeamManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3" style="background-color: #e3f2fd !important">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">ProjectAndTeamManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (_signInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Projects
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-controller="DepartmentLead" asp-action="ProjectManagement">Project Management</a>
                                        <a class="dropdown-item" asp-controller="DepartmentLead" asp-action="ProjectAssignment">Project Assignment</a>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="DepartmentLead" asp-action="CurrentAssignments">Current Assignment</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="DepartmentLead" asp-action="AssignmentRequests">Assignment Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="DepartmentLead" asp-action="TeamManagement">Team Management</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Employee" asp-action="CreateEmployee">Create Employee</a>
                                </li>
                            </ul>

                        }
                        @if (User.IsInRole("Department Lead"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Projects
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-controller="DepartmentLead" asp-action="ProjectManagement">Project Management</a>
                                        <a class="dropdown-item" asp-controller="DepartmentLead" asp-action="ProjectAssignment">Project Assignment</a>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="DepartmentLead" asp-action="CurrentAssignments">Current Assignment</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="DepartmentLead" asp-action="AssignmentRequests">Assignment Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="DepartmentLead" asp-action="TeamManagement">Team Management</a>
                                </li>
                            </ul>
                        }
                        @if (User.IsInRole("Team Lead"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="TeamLead" asp-action="AssignmentRequests">Assignment Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="TeamLead" asp-action="ProjectAssignment">Project Assignment</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="TeamLead" asp-action="CurrentAssignments">Current Assignment</a>
                                </li>
                            </ul>
                        }
                        @if (User.IsInRole("Project Lead"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ProjectLead" asp-action="AssignmentRequests">Assignment Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ProjectLead" asp-action="CurrentAssignments" asp-route-user="@User.Identity.Name">Current Assignment</a>
                                </li>
                            </ul>
                        }
                        <ul class="navbar-nav d-flex justify-content-end flex-grow-1">
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav d-flex justify-content-end flex-grow-1">
                            <li class="nav-item">
                                <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Login</a>
                            </li>
                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-dark">
        <div class="container">
            &copy; 2022 - ProjectAndTeamManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
